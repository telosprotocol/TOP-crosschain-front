{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "importHelpers": true,
    "rootDir": "src",
    "outDir": "lib",
    "allowJs": false,
    "declaration": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "topjs"]
}
